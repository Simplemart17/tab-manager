{
  "manifest_version": 3,
  "name": "SimpleTab Plus",
  "version": "1.0.1",
  "description": "Advanced tab management with cloud sync",
  "icons": {
    "16": "app/assets/icons/icon16.png",
    "48": "app/assets/icons/icon48.png",
    "128": "app/assets/icons/icon128.png"
  },
  "action": {
    "default_title": "SimpleTab Plus",
    "default_popup": "app/pages/popup.html",
    "default_icon": {
      "16": "app/assets/icons/icon16.png",
      "48": "app/assets/icons/icon48.png",
      "128": "app/assets/icons/icon128.png"
    }
  },
  "permissions": [
    "tabs",
    "storage",
    "bookmarks",
    "identity",
    "contextMenus",
    "alarms"
  ],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "chrome_url_overrides": {
    "newtab": "app/pages/newtab.html"
  },
  "optional_permissions": [
    "history"
  ],
  "commands": {
    "save-current-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Save current tab to collection"
    },
    "open-tab-manager": {
      "suggested_key": {
        "default": "Ctrl+Shift+M",
        "mac": "Command+Shift+M"
      },
      "description": "Open Tab Manager"
    }
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; script-src 'self'; script-src-elem 'self'; style-src 'self' 'unsafe-inline'; style-src-elem 'self'; object-src 'self'; connect-src 'self' https://anoylxzjeatvusegpzmy.supabase.co wss://anoylxzjeatvusegpzmy.supabase.co; img-src 'self' data: https://*; font-src 'self' data:;"
  },
  "web_accessible_resources": [{
    "resources": ["assets/*", "app/assets/*"],
    "matches": ["<all_urls>"]
  }]
}